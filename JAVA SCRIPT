// Variable to hold the array of NFT objects
const nfts = [];

// Function to mint NFTs with provided metadata
function mintNFT(name, description, rarity) {
    // Create an object to hold the metadata for the NFT
    const nft = {
        name: name,
        description: description,
        rarity: rarity
    };

    // Push the created NFT object into the array
    nfts.push(nft);
    console.log("Minted NFT:", name);
}

// Function to list all minted NFTs with their metadata
function listNFTs() {
    nfts.forEach((nft, index) => {
        console.log("\nID:\t\t\t" + (index + 1));
        console.log("Name:\t\t\t" + nft.name);
        console.log("Description:\t" + nft.description);
        console.log("Rarity:\t\t\t" + nft.rarity);
    });
}

// Function to get the total number of minted NFTs
function getTotalSupply() {
    console.log("\nTotal number of minted NFTs:", nfts.length);
}

// Minting some NFTs
mintNFT("Mythical Creature", "Celestial Dragon", "Legendary");
mintNFT("Human", "Commando", "Epic");
mintNFT("Asgardian", "Odin", "Legendary");

// Listing all minted NFTs
listNFTs();

// Getting the total supply of minted NFTs
getTotalSupply();
